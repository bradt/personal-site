Options -Indexes
AddType application/x-xpinstall .xpi

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteCond %{HTTP_HOST} ^brad\.touesnard\.com$ [NC]
RewriteRule ^(.*)$ http://bradt.ca/$1 [R=301,L]
RewriteRule ^p/([0-9]+)/? /?p=$1 [L,R=301]
RewriteRule ^documents/resume/? /resume/ [L,R=301]
RewriteRule ^content/([A-Za-z0-9_-]+)(\.gif|\.jpg|\.png|\.mp3|\.txt|\.wav) /content/uploads/0000/$1$2 [L,R=301]
RewriteRule ^archives/category/(.*) /category/$1 [L,R=301]
RewriteRule ^archives/tag/(.*) /tag/$1 [L,R=301]
RewriteRule ^archives/[0-9]+/[0-9]+/[0-9]+/([0-9]+)/ /?p=$1 [L,R=301]
</IfModule>

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress
